---
import _ from 'underscore';

const { items, title } = Astro.props;
---

<div
  class='flex flex-col items-center lg:p-12'
>
  { title && (
    <h2
      class='text-4xl font-bold uppercase py-8'
    >
      { title }
    </h2>
  )}
  <div
    class='flex justify-around w-full flex-wrap px-8'
  >
    { _.map(items, (item) => (
      <a
        class='flex justify-center py-8 w-full max-h-[400px] lg:w-[375px] lg:max-h-[400px]'
        href={item.url}
      >
        <img
          alt={item.image_alt}
          class='w-full h-full object-cover'
          src={item.image}
        />
      </a>
    ))}
  </div>
</div>