---
import _ from 'underscore';

const { items } = Astro.props;
---

<div
  class='flex w-full flex-wrap px-8 py-12 lg:px-48'
>
  { _.map(items, (item) => (
    <div
      class='flex flex-col py-8 w-full flex-wrap lg:w-[50%] lg:px-4'
    >
      <h4
        class='text-3xl font-bold uppercase mb-2'
      >
        { item.title }
      </h4>
      <p>
        { item.description }
      </p>
    </div>
  ))}
</div>