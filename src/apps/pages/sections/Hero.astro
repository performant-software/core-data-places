---
import clsx from 'clsx';

const Height = {
  small: 'small',
  medium: 'medium',
  large: 'large'
};

const {
  height = Height.small,
  imageAlt,
  imageUrl,
  subtitle,
  title
} = Astro.props;

---

<div
  class={clsx(
    'relative flex flex-col bg-gray-900 justify-center',
    { 'h-[220px]': height === Height.small },
    { 'h-[420px]': height === Height.medium },
    { 'h-[720px]': height === Height.large }
  )}
>
  <img
    alt={imageAlt}
    class='absolute top-0 left-0 h-full w-full object-cover'
    src={imageUrl}
  />
  <div
    class='absolute top-0 left-0 w-full h-full bg-gray-900/30'
  />
  { (title || subtitle) && (
    <div
      class='relative z-10 text-white px-8 md:px-20 py-12 max-w-full md:max-w-[55%]'
    >
      { title && (
        <h1
          class='text-7xl font-bold m-0 uppercase'
        >
          { title }
        </h1>
      )}
      { subtitle && (
        <p
          class='pt-10'
        >
          { subtitle }
        </p>
      )}
    </div>
  )}
</div>