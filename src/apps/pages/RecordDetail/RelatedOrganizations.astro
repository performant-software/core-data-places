---
import ServiceFactory from '@services/coreData/factory';
import Relations from '@apps/pages/RecordDetail/Relations.astro';
import { groupRelationships } from '@utils/detailPages';
import config from '@config';
import { getTranslations } from '@backend/i18n';

interface Props {
  excludes: string[];
  model: string;
  uuid: string;
}

const { excludes, model, uuid } = Astro.props;

const lang = Astro.currentLocale;
const service = ServiceFactory.getService(model);
const { organizations } = await service.getRelatedOrganizations(uuid);
const relationships = groupRelationships(organizations, excludes);
const { t } = await getTranslations(lang);
---
{Object.keys(relationships).map((uuid) => (
  <Relations
    data={relationships[uuid]}
    icon='occupation'
    label={t(uuid)}
    resolveDetailUrl={(organization) => `/${lang}/organizations/${organization.uuid}`}
    resolveName={organization => organization.name}
    showLinks={config.detail_pages.includes('organizations')}
    uuid={uuid}
  />
))}
