---
import Layout from "@layouts/Layout.astro";
import config from "@config";
import RecordDetail from "@apps/pages/RecordDetail/index.astro";
import { getTranslations } from '@i18n/server';
import { getFullRecord } from "@root/src/services";
import { getDetailPagePaths } from "@utils/detailPages";

const { t } = await getTranslations(Astro.currentLocale);

const { lang, uuid } = Astro.params;

const record = await getFullRecord('organizations', uuid)
const excludes = config.search?.result_filtering?.organizations?.exclude || []

export const getStaticPaths = async () => await getDetailPagePaths(config, 'organizations');
---

<Layout footer t={t} title={record.name}>
  <RecordDetail
    excludes={excludes}
    lang={lang}
    name={record.name}
    record={record}
  >
    {record.description && !excludes.includes('description')
      ? <p class="text-neutral-800 py-6 break-words">{record.description}</p>
      : null}
  </RecordDetail>
</Layout>
