---
import PostContent from '@apps/posts/PostContent';
import { getTranslations } from '@backend/i18n';
import { fetchPost, fetchPosts } from '@backend/tina';
import Container from '@components/Container.astro';
import config from '@config';
import Layout from '@layouts/Layout.astro';
import _ from 'underscore';

const { slug } = Astro.params;
const post = await fetchPost(slug);

const { t } = await getTranslations(Astro.currentLocale);

export const getStaticPaths = async () => {
  const staticPaths = [];

  const locales = config.i18n.locales;
  const posts = await fetchPosts();

  _.each(locales, (lang) => {
    _.each(posts, (post) => {
      staticPaths.push({ params: {
        lang,
        slug: post?._sys.filename
      }});
    });
  });

  return staticPaths;
};

---

<Layout
  footer
  t={t}
  tab='posts'
  title={slug}
>
  <Container
    className='pb-16'
  >
    <PostContent
      content={post?.body}
      title={post?.title}
      client:only='react'
    />
  </Container>
</Layout>
