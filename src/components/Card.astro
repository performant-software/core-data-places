---
const { alt, date, category, title, author, slug, imageUrl, blurb, t } = Astro.props;
---

<article
  class='flex max-w-xl flex-col items-start justify-between bg-neutral-light'
>
  <div
    class='relative w-full'
  >
    { imageUrl && (
      <img
        alt={alt || ''}
        src={imageUrl}
        class='aspect-[16/9] w-full bg-neutral-light object-cover sm:aspect-[2/1] lg:aspect-[3/2]'
        height={256}
        width={384}
      />
    )}
    { !imageUrl && (
      <div
        class='aspect-[16/9] w-full bg-neutral-light object-cover sm:aspect-[2/1] lg:aspect-[3/2]'
      />
    )}
    <div
      class='absolute inset-0 ring-1 ring-inset ring-gray-900/10'
    />
  </div>
  <div
    class='flex items-center gap-x-4 text-xs p-2'
  >
    <time
      datetime={date}
      class='text-gray-500'
    >
      { date }
    </time>
    { category && (
      <a
        href='#'
        class='relative z-10 rounded-full bg-gray-200 px-3 py-1.5 font-medium text-gray-600 hover:bg-white'
      >
        { category }
      </a>
    )}
  </div>
  <div
    class='group relative p-6'
  >
    <h3
      class='mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600'
    >
      <a
        href={slug}
      >
        <span
          class='absolute inset-0'
        />
        { title }
      </a>
    </h3>
    <p
      class='mt-5 line-clamp-3 text-sm leading-6 text-gray-600'
    >
      { blurb }
    </p>
  </div>
  { author && (
    <div
      class='relative mt-8 flex items-center gap-x-4 p-6'
    >
      <div
        class='text-sm leading-6'
      >
        <p
          class='font-semibold text-gray-900'
        >
          { t('by', { author }) }
        </p>
      </div>
    </div>
  ) }
  <a
    class='flex justify-end p-8 w-full'
    href={slug}
  >
    { t('readMore') } &rarr;
  </a>
</article>